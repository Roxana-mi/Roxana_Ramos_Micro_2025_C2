/*
* 1010 1100 and
*1111  0000
*1010 0000
*
**/
*p_ClckEnableGIOB| = 0x0000002;
*p_regModerGPIOB &= 0xFFFFFFF0;
*p_egModerGPIOB | = 0x00000001;
*p_egModerGPIOB | = 0X00000001;

/* loop forever */
for;;);
