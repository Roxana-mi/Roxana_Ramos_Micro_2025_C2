#includ <xc.h>
#includ <stdint.h>
#include "configuracion.h"

int main(void)
{

uint16_t *p_trisd = (uint16_t*)0xf95;
uint16_t *p_latd = (uint16_t *)0xF8C;
*p_trisd =0xF0;
// TRIS = 0X00;
while(1)
{

*p_latd = 0x01;
//LATD = 0x01; // encendido el led
delay_ms(500);
*p_latd = 0x00;
//LATD = 0x00; // encendido el led
delay_ms(500);
}
rotur 0;
}
